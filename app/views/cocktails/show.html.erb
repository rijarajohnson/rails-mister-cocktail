<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1529502669403-c073b74fcefb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
<ul>
  <% @cocktail.doses.each do |dose| %>
 <li><%= dose.description %> <%= link_to "X", dose_path(dose), method: :delete %></li>
 <% end %>
</ul>

<p><%= link_to "Back to Cocktails", cocktails_path %></p>
<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
</div>
